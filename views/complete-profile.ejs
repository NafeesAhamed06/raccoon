<style>
  * {
    -webkit-tap-highlight-color: transparent;
  }
  body {
    /* font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif; */
    font-family: "Montserrat";
    background: radial-gradient(circle at top left, #1a0033, #0a001a);
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    color: #fff;
  }

  .container {
    background: rgba(20, 20, 35, 0.85); /* glass effect */
    padding: 40px;
    border-radius: 15px;
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    box-shadow: 0 0 20px rgba(255, 0, 150, 0.4), 0 0 30px rgba(0, 200, 255, 0.2);
    width: 100%;
    max-width: 420px;
    box-sizing: border-box;
  }

  h2 {
    text-align: center;
    margin-bottom: 24px;
    color: #ff00c8;
    font-weight: bold;
  }

  label {
    display: block;
    margin: 12px 0 6px;
    color: #ddd;
    font-size: 14px;
  }

  select {
    width: 100%;
    padding: 10px;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(0, 0, 0, 0.4);
    color: white;
    font-size: 15px;
    outline: none;
    backdrop-filter: blur(4px);
    transition: 0.3s;
  }

  select:hover,
  select:focus {
    border-color: #ff00c8;
    box-shadow: 0 0 8px rgba(255, 0, 200, 0.5);
  }

  .checkbox-container {
    display: flex;
    align-items: center;
    margin-top: 20px;
  }

  .checkbox-container input[type="checkbox"] {
    margin-right: 10px;
    width: 18px;
    height: 18px;
    cursor: pointer;
    accent-color: #ff00c8;
  }

  .checkbox-container label {
    margin: 0;
    font-size: 14px;
    color: #ccc;
  }

  .checkbox-container a {
    color: #00e0ff;
    text-decoration: none;
    font-weight: bold;
  }

  .checkbox-container a:hover {
    text-shadow: 0 0 6px #00e0ff;
  }

  button {
    width: 100%;
    margin-top: 24px;
    padding: 12px;
    border: none;
    background: linear-gradient(90deg, #ff00c8, #6200ff);
    color: white;
    font-size: 16px;
    font-weight: bold;
    border-radius: 8px;
    cursor: pointer;
    transition: 0.3s;
  }

  button:hover {
    background: linear-gradient(90deg, #6200ff, #ff00c8);
    box-shadow: 0 0 12px rgba(255, 0, 200, 0.5);
  }

  @media (max-width: 480px) {
    .container {
      padding: 30px 20px;
    }
  }
</style>

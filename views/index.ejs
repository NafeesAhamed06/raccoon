    <script>
      //Page Loader
      window.addEventListener("load", () => {
        const loader = document.getElementById("page-loader");
        if (loader) {
          loader.style.display = "none";
        }
      });
      //Settings Redirect
      document.querySelector(".setting-BTN").addEventListener("click", () => {
        window.location.href = "/Settings";
      });

      //Subscribe
      function subscribe() {
        let plan = document.getElementById("subscriptionPlan").value;
        let loadingDialog = document.getElementById("loadingDialog");

        // Show loading dialog
        loadingDialog.style.display = "flex";

        fetch("/create-invoice-subscription", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ plan: plan }),
        })
          .then((response) => response.text())
          .then((text) => {
            const data = JSON.parse(text);
            if (data.url) {
              window.location.href = data.url; // Redirect to PayPal approval page
            } else {
              alert("Subscription failed. No URL returned.");
            }
          })
          .catch((error) => {
            console.error("Error:", error);
            alert("Subscription failed, please try again.");
          })
          .finally(() => {
            loadingDialog.style.display = "none";
          });
      }

      //Video Chat Button
      document
        .getElementById("callBtn")
        .addEventListener("click", function (event) {
          event.preventDefault(); // stop default link navigation

          const today = new Date().toDateString();
          const lastShown = localStorage.getItem("popupShownDate");

          if (lastShown !== today) {
            const modalW = document.querySelector("#Warning");
            if (modalW) {
              modalW.classList.add("active");
              document.getElementById("overlay").classList.add("active");
            }

            // When user confirms in the modal:
            document
              .querySelector("#confirmWarning")
              .addEventListener("click", () => {
                localStorage.setItem("popupShownDate", today);
                window.location.href = "/video_chat"; // now go to video chat
              });
          } else {
            // Already shown today, skip modal
            window.location.href = "/video_chat";
          }
        });
    </script>
  </body>
</html>
<style>
  /* Loader wrapper full-screen */
  #page-loader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: white; /* Or dark background */
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 999999999999999999;
  }

  /* Spinner style */
  .spinner {
    width: 50px;
    height: 50px;
    border: 6px solid #f3f3f3;
    border-top: 6px solid #ff69b4; /* Pink color */
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  /* Spinner animation */
  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
  body {
    margin: 0;
    padding: 0;
    height: 100vh;
    background: radial-gradient(circle at 20% 20%, #1a0052, #000000 70%);
    background-color: #0d0d1f;
    background-repeat: no-repeat;
    background-size: cover;
    font-family: "Inter", sans-serif;
    overflow: hidden;
    color: #fff;
  }
  .glow-effect {
    text-shadow: 0 0 8px #00f0ff, 0 0 16px #00f0ff, 0 0 24px #00f0ff;
  }
  .glow-image {
    width: 300px; /* or whatever size fits your layout */
    filter: drop-shadow(0 0 10px #00ffff) drop-shadow(0 0 20px #00ffff)
      drop-shadow(0 0 30px #00ffff);
  }

  .refundPOL {
    color: #ffffff;
    font-weight: 600;
    text-decoration: underline;
    text-transform: uppercase;
    cursor: pointer;
  }
  #loadingDialog {
    display: none;
  }
  .subOptionHolder {
    display: flex;
    justify-content: center;
    padding: 10px;
    gap: 10px;
  }

  .mu-name {
    font-size: 13px;
  }
  .free {
    cursor: pointer;
    font-size: 13px;
    display: flex;
    align-items: center;
    gap: 3px;
  }

  .pro {
    cursor: pointer;
    font-size: 13px;
    display: flex;
    align-items: center;
    gap: 3px;
  }
  .proimg {
    width: 20px;
  }
  .profile {
    z-index: 100;
    gap: 10px;
    display: flex;
    width: fit-content;
    position: absolute;
    right: 3%;
    top: 3%;
  }
  .profile-pic {
    cursor: pointer;
    width: 50px;
    object-fit: cover;
    height: 50px;
    border-radius: 30px;
  }
  .pfpp {
    border: 2px solid white;
    filter: drop-shadow(0 0 20px rgba(0, 240, 255, 0.4))
      drop-shadow(0 0 40px rgba(0, 240, 255, 0.3))
      drop-shadow(0 0 60px rgba(179, 0, 255, 0.3));
  }
  /* .profile:hover .navdown {
    display: flex;
  } */
  .profile-wrapper {
    position: relative;
    display: inline-block;
  }
  .profile-wrapper:hover .navdown {
    display: flex;
  }
  .mu-email {
    font-size: 13px;
  }

  .navdown {
    display: none;
    z-index: 3;
    flex-direction: column;
    width: 20%;
    right: 1%;
    overflow: hidden;
    padding: 10px;
    position: fixed;
    top: 1%;
    font-family: Poppins;
    background: rgba(20, 20, 35, 0.85); /* deep dark with slight transparency */
    border-radius: 12px;
    backdrop-filter: blur(6px); /* glass effect */
    color: #fff; /* text contrast */
  }
  /* .brrdrr:hover .navdown {
    display: flex;
  } */
  .glow-effect-2 {
    text-shadow: 0 0 6px #ff00cc, 0 0 12px #ff00cc, 0 0 20px #cc00ff,
      0 0 30px #cc00ff;
  }
  /* Show Mobile Menu Only on Small Screens */
  @media (max-width: 768px) {
    .profile {
      display: flex;
      top: 1%;
      right: 1%;
      /* padding: 0px 25px; */
      align-items: center;
      justify-content: space-evenly;
      color: white;
    }
    .navdown {
      width: 65%;
    }
    .main-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 30px;
      height: 100vh;
      justify-content: space-around;
    }
  }
</style>

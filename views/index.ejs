<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/img/Logo3.webp" type="image/x-icon" />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <title>Raccoon App - Home</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/modal.css?v=0.01.1" />
  </head>
  <body>
    <script>
      const brra = "<%=usera.proDuration%>";
      const myMail = "<%=user.email%>";
    </script>
    <!-- Loader -->
    <div id="page-loader">
      <div class="spinner"></div>
    </div>

    <div class="modal" id="modal">
      <div class="modal-header">
        <div class="title">SUBSCRIPTION</div>
        <button data-close-button class="close-button">&times;</button>
      </div>
      <div class="modal-body">
        <% if(usera.sub == "free"){%>
        <p class="modalpro">
          <strong>Current Plan: </strong>FREE<img
            src="/img/SUBS/Free.png"
            style="filter: invert(1)"
            class="proimg"
          />
        </p>
        <p class="modalpro">
          <strong>Connects Left: </strong>
          <%=usera.freeLimit%>
        </p>
        Subscribe to Pro to unlock unlimited texting, video calling, and
        exclusive features!
        <div class="subscription-box">
          <h2>Choose a Subscription Plan</h2>
          <div class="subOptionHolder">
            <select id="subscriptionPlan" class="sub-sel">
              <option value="0.3">1 Week - $5</option>
              <option value="1">1 Month - $13</option>
              <option value="6">6 Months - $30</option>
            </select>
            <br />
            <button onclick="subscribe()" class="sub-but">Subscribe</button>
            <br />
          </div>
          <div class="subOptionHolder">
            <a href="/refund-policy" class="refundPOL">Refund Policy</a>
          </div>
        </div>
        <%}else if(usera.sub == "pro"){%>
        <p class="modalpro">
          <strong>Current Plan: </strong>PRO<img
            src="/img/SUBS/Pro.png"
            class="freeimg"
          />
        </p>
        <p class="modalpro">
          <strong>Ends ON: </strong>
          <script>
            console.log(brra);
            let formattedDate = new Date(brra).toISOString().split("T")[0];
            document.write(formattedDate);
          </script>
        </p>
        <p style="color: red; font-weight: 900; text-align: center">
          NOTE* THERE IS NO REFUNDS
        </p>
        <button class="can-but" id="cancel-subscription">CANCEL</button>
        <script>
          //Cancel Subscription
          document
            .getElementById("cancel-subscription")
            .addEventListener("click", async () => {
              const response = await fetch("/cancel-subscription", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ userEmail: myMail }),
              });

              const data = await response.json();
              alert(data.message);
              location.reload();
            });
        </script>
        <%}%>
      </div>
    </div>
    <div id="overlay"></div>
    <div id="loadingDialog">
      <div class="loading-content">
        <p>Processing your subscription...</p>
      </div>
    </div>

    <div class="profile brrdrr">
      <button class="abutton setting-BTN">
        <img src="/img/settings2.png" alt="Settings" />
      </button>

      <div class="profile-wrapper">
        <img src="<%= usera.pfp %>" class="profile-pic pfpp" alt="" />
        <div class="navdown">
          <img src="<%= usera.pfp %>" class="profile-pic" alt="" />
          <p class="mu-name"><%= usera.name %></p>
          <p class="mu-email"><%= usera.email %></p>
          <% if(!usera.isGuest) { %> <% if(usera.sub == "pro") { %>
          <p data-modal-target="#modal" id="subspro" class="pro">
            Pro User <img src="/img/SUBS/Pro.png" class="proimg" />
          </p>
          <% } else {%>
          <p data-modal-target="#modal" class="free">
            Free User
            <img
              style="filter: invert(1)"
              src="/img/SUBS/Free.png"
              class="freeimg"
            />
          </p>
          <% } %> <% } %>
          <a
            style="color: white; text-decoration: none; font-weight: 900"
            id="logout-button"
            href="/auth/logout"
            >Logout</a
          >
        </div>
      </div>
    </div>
    <main>
      <div class="main-container">
        <div class="index-action-container">
          <div class="index-action-cont">
            <p class="start-chat test-effect-1 test-1">RACCOON APP</p>
            <!-- <p class="start-chat glow-effect-2 test-1">RACCOON APP</p> -->
            <p class="start-chat test-2">Random Voice Chat</p>
          </div>
          <div class="button-container">
            <button class="abutton test-3" id="callBtn" style="cursor: pointer">
              <a>START</a>
              <!-- <a
                style="
                  color: wheat;
                  text-decoration: none;
                  font-family: 'Montserrat' !important;
                  font-weight: 200;
                "
                >Video Chat</a
              > -->
            </button>
            <p class="terms">
              Check our
              <a href="/terms-service" target="_blank">Terms of Service</a>
              and
              <a href="/privacy-policy" target="_blank">Privacy Policy</a>.
            </p>
          </div>
          <style>
            .button-container {
              display: flex;
              flex-direction: column;
              gap: 10px;
              align-items: center;
              justify-content: center;
            }
          </style>

          <div class="modal" id="Warning">
            <div class="modal-header">
              <div class="title">Keep Raccoon Clean & Respectful</div>
              <button data-close-button class="close-button">&times;</button>
            </div>
            <div class="modal-body">
              <p
                style="
                  text-align: center;
                  font-weight: 900;
                  color: red;
                  font-size: large;
                "
              >
                Please confirm that you are 18 years or older.
              </p>
              <p
                style="
                  text-align: center;
                  font-weight: 900;
                  color: red;
                  font-size: large;
                "
              >
                You may be recorded at any time in the app
              </p>
              <p>This is a safe space. Please:</p>
              <ul>
                <li>Don’t flirt.</li>
                <li>Don’t say inappropriate things.</li>
                <li>Don’t remove clothing.</li>
                Don’t ask for personal info.
              </ul>
              <p>
                Let’s keep Raccoon clean, respectful, and peaceful for everyone.
                If you want to vent, talk, or make friends – do it kindly.
              </p>
              <p>
                By using Raccoon, you agree to follow these community rules and
                <a style="color: #00f0ff" href="/terms-service" target="_blank"
                  >Terms of Service</a
                >
              </p>
              <button id="confirmWarning" class="can-but" data-close-button>
                I Accept
              </button>
            </div>
          </div>
          <style>
            #Warning {
              height: 80vh;
              overflow: auto;
            }
            .index-action-cont p {
              margin: 0;
            }
            .test-effect-1 {
              text-shadow: 0 0 6px #1ae6f4, 0 0 12px #1ae6f4, 0 0 20px #1ae6f4,
                0 0 30px #1ae6f4;
            }
            .test-1 {
              font-size: 10vh;
            }
            .test-2 {
              font-size: 5vh;
              color: #5d039d;
            }
            .test-3 {
              cursor: pointer;
              background: linear-gradient(135deg, #ff00cc54, #3333ff26);
              box-shadow: 0 0px 20px 10px rgba(255, 0, 204, 0.6);
              outline: 3px solid #ff00cc;
            }
            .test-3:hover {
              /* box-shadow: 0 0 25px 20px rgb(100 0 255 / 90%); */
              box-shadow: 0 0 25px 20px #1784a2;
              outline: 3px solid #00c8ff;
            }
            .test-3 a {
              color: #ffffff;
              text-decoration: none;
              font-family: "Montserrat" !important;
              font-weight: 900;
              text-shadow: 0 0 19px #ff00ccad, 0 0 20px #ff00ccba,
                0 0 20px #cc00ff, 0 0 30px #cc00ffc2;
              font-size: larger;
              text-transform: uppercase;
              letter-spacing: 5px;
              font-family: "Montserrat" !important;
            }
            button.test-3:hover a {
              color: #ff00ff; /* any color you want */
            }

            @media (max-width: 768px) {
              .test-1 {
                font-size: 6vh;
              }
              .test-2 {
                font-size: 3vh;
              }
            }
          </style>
        </div>
        <img src="/img/Racoon-transparent1.webp" alt="" class="glow-raccoon" />
      </div>
    </main>
    <script
      src="https://code.jquery.com/jquery-3.6.4.min.js"
      integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8="
      crossorigin="anonymous"
    ></script>
    <script src="/js/main.js"></script>
    <script defer src="/js/modal.js"></script>
    <script>
      function logout() {
        // Clear cookies
        document.cookie.split(";").forEach((c) => {
          document.cookie = c
            .replace(/^ +/, "")
            .replace(
              /=.*/,
              "=;expires=" + new Date().toUTCString() + ";path=/"
            );
        });
        // Clear localStorage
        localStorage.clear();
        // Logout from session
        console.log("Logged out!");
      }
      document
        .getElementById("logout-button")
        .addEventListener("click", logout);
    </script>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/img/Logo3.webp" type="image/x-icon" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <title>Raccoon App Home</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <main>
      <style></style>
      <div class="main-container">
        <div class="index-action-container">
          <p class="start-chat glow-effect-2">Welcome To Raccoon App</p>
          <div class="button-container">
            <button class="googlebtn">
              <img src="/img/google.png" alt="" />
              <a href="/auth/google" class="googletxt">Sign in with Google</a>
            </button>
            <button class="googlebtn">
              <img src="/img/gmail.png" alt="" />
              <a href="/maillogin" class="googletxt">Sign in with Mail</a>
            </button>
            <button onclick="guestLogin()" class="googlebtn">
              <img
                src="/img/guest.png"
                style="
                  filter: invert(1)
                    drop-shadow(0 0 4px rgba(255, 255, 255, 0.2));
                "
                alt=""
              />
              <p class="googletxt">Sign in as Guest</p>
            </button>
          </div>
          <p class="terms">
            Check our
            <a href="/terms-service" target="_blank">Terms of Service</a>
            and
            <a href="/privacy-policy" target="_blank">Privacy Policy</a>.
          </p>
        </div>
        <img src="/img/Racoon-transparent1.webp" alt="" class="glow-raccoon" />
      </div>
    </main>
    <script
      src="https://code.jquery.com/jquery-3.6.4.min.js"
      integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8="
      crossorigin="anonymous"
    ></script>
    <script src="/js/main.js"></script>
  </body>
</html>
<style>
  body {
    margin: 0;
    padding: 0;
    height: 100vh;
    background: radial-gradient(circle at 20% 20%, #1a0052, #000000 70%);
    background-color: #0d0d1f;
    background-repeat: no-repeat;
    background-size: cover;
    font-family: "Inter", sans-serif;
    overflow: hidden;
    color: #fff;
  }
  .index-action-container{
    gap: 0px;
  }
  .start-chat{
    margin-bottom: 20px;
  }
  .terms {
    margin: 0;
    margin-top: 5px;
    font-size: 9px;
  }
  .terms a {
    color: lightblue;
  }
  .glow-effect-2 {
    text-shadow: 0 0 6px #ff00cc, 0 0 12px #ff00cc, 0 0 20px #cc00ff,
      0 0 30px #cc00ff;
  }

  .glow-effect {
    text-shadow: 0 0 8px #00f0ff, 0 0 16px #00f0ff, 0 0 24px #00f0ff;
  }
  .glow-image {
    width: 300px; /* or whatever size fits your layout */
    filter: drop-shadow(0 0 10px #00ffff) drop-shadow(0 0 20px #00ffff)
      drop-shadow(0 0 30px #00ffff);
  }

  .abutton {
    background: linear-gradient(135deg, #ff00cc, #3333ff);
    border: none;
    padding: 15px 30px;
    color: white;
    font-size: 1.2rem;
    border-radius: 12px;
    cursor: pointer;
    box-shadow: 0 0 15px rgba(255, 0, 204, 0.6);
    transition: 0.3s ease;
  }

  .abutton:hover {
    transform: scale(1.05);
    box-shadow: 0 0 25px rgba(255, 0, 204, 0.9);
  }
  .googlebtn {
    background: rgba(0, 0, 0, 0.6);
    border-radius: 8px;
    border: 1px solid #00f0ff;
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 12px 18px;
    cursor: pointer;
    transition: 0.3s ease;
    box-shadow: 0 0 12px rgba(0, 240, 255, 0.3),
      0 0 24px rgba(0, 240, 255, 0.15);
    letter-spacing: 2px;
  }

  .googlebtn:hover {
    box-shadow: 0 0 16px rgba(0, 240, 255, 0.6), 0 0 32px rgba(179, 0, 255, 0.3);
    transform: scale(1.03);
  }

  .googlebtn .googletxt {
    text-decoration: none;
    font-family: "Inter", sans-serif;
    font-weight: 200;
    font-size: 16px;
    color: #00f0ff;
    text-shadow: 0 0 3px rgba(0, 240, 255, 0.4);
    text-transform: uppercase;
    margin: 0;
  }

  .googlebtn img {
    width: 20px;
    height: 20px;
    filter: drop-shadow(0 0 4px rgba(255, 255, 255, 0.2));
  }
</style>
<script>
  async function guestLogin() {
    try {
      const response = await fetch("/auth/guest-login", {
        method: "POST",
        credentials: "include", // to include cookies/session
        headers: {
          "Content-Type": "application/json",
        },
      });

      const data = await response.json();
      console.log("Guest login success:", data);
      alert(`Logged in as ${data.user.name}`);
      window.location.href = "/";
    } catch (err) {
      console.error("Guest login failed", err);
      alert("Guest login failed.");
    }
  }
</script>
